; ##########################################
; ### calendarmenu
; ##########################################

(defwidget calendarmenu []
  (eventbox
    :onhoverlost "eww close calendarmenu"
    (box
      :orientation "vertical"
      :space-evenly false
      :valign "center"
      :halign "center"
      :class "calendarmenu-widget"
      (calendar
        :day calendar_day
        :month calendar_month
        :year calendar_year
      )
    )
  )
)
